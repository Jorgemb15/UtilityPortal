@model List<UtilityPortalLogical.Modelos.SP_Proveedor_Consulta_Result>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_LayoutPagePrincipal.cshtml";
}

<h2>Lista de Proveedors</h2>

<form name="frmFormulario" id="frmFormulario" method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-4">
            <label class="label">Código</label>
            <input class="form-control w-250 clsSoloNumeros" type="text" name="Codigo" id="Codigo" value="" />
        </div>
        <div class="col-lg-4">
            <label class="label">Nombre</label>
            <input class="form-control w-250" type="text" name="Nombre" id="Nombre" value="" />
        </div>
    </div>
    <br />
    <br />

    <div class="row col-lg-10">
        <div class="col-lg-2">
            <button title="Buscar" class="btn btn-success btn-success" value="Buscar" name="btnBuscar" id="btnBuscar">
                <i class="fa fa-search"></i> Buscar
            </button>
        </div>
        <div class="col-lg-2">
            <a title="Nuevo" class="btn btn-info" href="@Response.ApplyAppPathModifier("~/Proveedor/Mantenimiento?strCodProceso=I")"><span class="fa fa-edit"></span> Nuevo</a>
        </div>
    </div>

    <br />
    <br />

    @{
        if (this.Model.Count > 0)
        {
            @*<table id="TablaBusqueda" name="TablaBusqueda" class="paginated-table table table-striped table-bordered table-sm" cellspacing="0" style="width:85%">*@
                <table id="TablaBusqueda" name="TablaBusqueda" class="table table-bordered table-striped table-responsive-sm table-sm">
                <thead>
                    <tr class="d-flex">
                        <th class="col-1">Código</th>
                        <th class="col-5">Nombre</th>
                        <th class="col-4">Cedula</th>
                        <th class="col-2">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (UtilityPortalLogical.Modelos.SP_Proveedor_Consulta_Result PosicionModelo in this.Model)
                    {
                        <tr class="d-flex">
                            <td class="col-1">@PosicionModelo.Codigo</td>
                            <td class="col-5">@PosicionModelo.Nombre</td>
                            <td class="col-4">@PosicionModelo.Cedula</td>
                            <td class="col-2">
                                <div class="text-center">
                                    <a title="Modificar" class="btn btn-primary btn-md center-block w-60px h-35px" href="@Response.ApplyAppPathModifier("~/Proveedor/Mantenimiento?strCodProceso=M&nCodigo="+@PosicionModelo.Codigo)"><i class="fa fa-edit"></i> </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <div class="text-center">
                <h2>Sin Registros para Mostrar</h2>
            </div>
        }
    }

</form>